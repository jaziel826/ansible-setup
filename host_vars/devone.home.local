---
branch: main

ansible_cron_minute: "*/5"
ssh_port: 22
ssh_users: "jaziel velociraptor"

# platform-specific
ansible_python_interpreter: /usr/bin/python3
microcode_amd_install: true
microcode_intel_install: false
dotfiles_repo: "https://github.com/jaziel826/configs.git"
dotfiles_repo_version: main
dotfiles_home: "$HOME"
dotfiles_repo_accept_hostkey: false
dotfiles_repo_local_destination: "$HOME/repo/.dots"
dotfiles_files:
